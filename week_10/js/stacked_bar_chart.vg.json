{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://poluskg.github.io/FIT3179/week_10/data/cleaned_state_data.csv"
  },
  "repeat": {
    "layer":[
      "total_population",
      "cvap",
      "total_votes"
    ]
  },
  "spec": {
    "mark": "bar",
    "encoding": {
      "x": {"field": "state"},
      "y": {
        "aggregate": "sum",
        "stack": "normalize",
        "field": {"repeat": "layer"},
        "title": "Breakdown of Total Population"
      },
      "color": {
        "datum": {"repeat": "layer"},
        "type": "nominal"
      }
    },
    "tooltip": [
      {"field": "state", "type": "quantitative", "format": ","},
      {"field": "total_population", "type": "quantitative", "format": ","},
      {"field": "total_votes", "type": "quantitative", "format": ","},
      {"field": "cvap", "type": "quantitative", "format": ","}
    ]
  }
}
