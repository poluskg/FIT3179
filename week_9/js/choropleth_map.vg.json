{
	"$schema": "https://vega.github.io/schema/vega-lite/v4.json",
	"title": "United States of America - 2016 Presidential Election",
	"width": 800,
	"height": 600,
	"projection": {"type": "equirectangular"},
	"data": {
		"url": "https://raw.githubusercontent.com/poluskg/FIT3179/main/js/ne_110m_admin_1_states_provinces.topojson",
		"format": {
			"type": "topojson",
			"feature": "ne_110m_admin_1_states_provinces"
		}
	},
	"transform": [
		{
			"lookup": "properties.NAME",
			"from": {
	        		"data": {
	        			"url": "https://raw.githubusercontent.com/poluskg/FIT3179/main/data/state_data.csv"
				},
	        	"key": "state",
	        	"fields": ["party"]
	        }
	    }
	],
	"mark": {"type": "geoshape"},
	"encoding": {
		"color": {"field": "party"},
      	"tooltip": [
      		{
			"field": "properties.NAME",
			"type": "nominal",
			"title": "state"}
      	]
    }
}
