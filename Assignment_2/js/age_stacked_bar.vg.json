{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://poluskg.github.io/FIT3179/Assignment_2/data/VoterAgeCategory.csv"},
  "mark": "bar",
  "selection": {
    "attr_selection": {
      "bind": "legend",
      "type": "multi",
      "fields": ["Age_Category"]
    }
  },
  "encoding": {
    "x": {
      "field": "Candidate",
      "type": "nominal",
      "title": "Candidate"
    },
    "y": {
      "field": "Votes",
      "type": "quantitative",
      "stack":  "normalize",
      "sort": "descending"
    },
    "color": {
      "field": "Age_Category",
      "title": "Age Group",
      "type": "nominal",
      "scale": {
        "scheme": "purples"
        }
    },
    "opacity": {
      "condition": {"selection": "attr_selection", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Age_Category", "title": "Age Group"},
      {"field": "Candidate"},
      {"field": "Votes", "title": "% of Demographic", "format": ".1%"},
      {"field": "Pct_Pop", "title": "% of Voter Population", "format": ".1%"}
    ]
  },
  "width": 75
}
